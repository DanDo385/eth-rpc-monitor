# Ethereum RPC Provider Configuration
#
# To use this file:
# 1. Copy to providers.yaml: cp config/providers.yaml.example config/providers.yaml
# 2. Replace placeholder environment variables or API keys with your actual values
# 3. providers.yaml is gitignored and will not be committed

defaults:
  timeout: 10s
  max_retries: 3

providers:
  # Paid providers - replace with your API keys or use environment variables
  - name: alchemy
    url: ${ALCHEMY_URL}  # or https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
    type: paid

  - name: infura
    url: ${INFURA_URL}   # or https://mainnet.infura.io/v3/YOUR_API_KEY
    type: paid

  # Free public RPC endpoints - no API key required
  - name: ankr
    url: https://rpc.ankr.com/eth
    type: free

  - name: cloudflare
    url: https://cloudflare-eth.com
    type: free

  - name: publicnode
    url: https://ethereum-rpc.publicnode.com
    type: free

# Environment variable setup (optional):
# export ALCHEMY_URL="https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY"
# export INFURA_URL="https://mainnet.infura.io/v3/YOUR_API_KEY"
